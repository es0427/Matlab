a=0; b=2*pi;           %1a
x=linspace(a,b,100);
y=f(x);
plot(x,y); grid on;
xlabel('x'); ylabel('y'); title('exp(-u*x^2))*cos(x^2)');
xr=ginput(2);
[xm,ym]=fminbnd(@f,xr(1,1),xr(2,1));
hold on;
plot(xm,ym,'r*',xr(1,1),xr(1,2),'g*',xr(2,1),xr(2,2),'g*');
hold off;

